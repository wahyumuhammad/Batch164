@model MiniProject.ViewModel.MMenuAccessVM

<div class="box box-solid box-primary">
    <div class="box-header">
        <h2 class="box-title">@ViewBag.Title</h2>
    </div>
    <div class="box-body with-border">
        <div class="form-group">
            <div class="col-md-3">
                <label class="control-label">*Role Code</label>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(Model => Model.role.code, new { @class = "form-control col-md-9", @readonly = "" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <label class="control-label">*Menu Access</label>
            </div>
            <div class="col-md-9">
                @{ int i = 1;}
                @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.ListMenu)
                {
                    <input type="checkbox" value="@item.Value" id="@i"/>@item.Text <br />
                    i++;
                }
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-warning btn-sm" id="btn-cancel">Cancel</button>
        </div>
    </div>
</div>
